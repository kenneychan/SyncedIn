<!doctype html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      defer
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img
            src="/images/sync-32.png"
            alt="Logo"
            width="30"
            class="d-inline-block align-text-center"
          />
          SyncedIn
        </a>
        <div class="collapse navbar-collapse" id="navbarColor02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/"
                >Home Page</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/jobseekers">Job-Seekers</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/jobs">Jobs</a>
            </li>
            <% if (user && user.roleAdmin) { %>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Admin
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/users">Users</a></li>
              </ul>
            </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
          </ul>
        </div>
        <% if (user) { %>
        <a href="/logout" class="login nav-link">Log Out</a>
        <% } else { %>
        <a href="/auth/google" class="login nav-link"
          ><img src="/images/btn_google_signin_light_normal_web.png"
        /></a>
        <% } %>
      </div>
    </nav>
    <main></main>
  </body>
</html>
