<!doctype html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      defer
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link defer href="/stylesheets/carousel.css" rel="stylesheet">
    <link defer rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="shortcut icon" href="/images/sync-32b.png">
    <script defer src="/js/script.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand" href="/" id="navcolor">
          <img
            src="/images/sync-32b.png"
            alt="Logo"
            width="30"
            class="d-inline-block align-text-center"
          />
          SyncedIn
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" id="navcolor" aria-current="page" href="/"
                >Home Page</a
              >
            </li>
            <li class="nav-item" >
              <a class="nav-link" id="navcolor" href="/users/seekers">Job-Seekers</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/jobs" id="navcolor">Jobs</a>
            </li>
            <% if (user && user.roleAdmin) { %>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
                id="navcolor"
              >
                Admin
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/users" id="navcolor">Users</a></li>
              </ul>
            </li>
            <% } %>
            <% if (user && user.rolePoster) { %>
            <li class="nav-item">
              <a class="nav-link" href="/jobs/new" id="navcolor" <%- title === 'Add New Job' ? 'class="active"' : '' %>>Add Job</a>
            </li>
            <li class="nav-item">

              <a class="nav-link" href="/jobs/jobsByPoster" id="navcolor"<%- title === 'Job by Poster' ? 'class="active"' : '' %>>My Jobs</a>

            </li>
            <% } %>
          </ul>
        <% if (user) { %><a class="nav-link" href="/users/profile" >Profile</a> &nbsp; &nbsp; | &nbsp; &nbsp;
        <a href="/logout" class="login nav-link">Log Out</a>
        <% } else { %>
        <a href="/auth/google" class="login nav-link"
          ><img src="/images/btn_google_signin_light_normal_web.png"
        /></a>
        <% } %>
      </div>
    </div>
  </nav>
  <main>