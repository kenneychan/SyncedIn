<%- include('../partials/header') %>

<div class="container"></div>
  <img
    alt="avatar"
    src="<%= user.avatar %>"
    referrerpolicy="no-referrer"
    class="rounded-circle"
  />&nbsp; &nbsp; | &nbsp; &nbsp;<%= user.name %>
</div>

<br><br>

<h2 class="h2">About</h2>

<div>
  <p><%= user.about %></p>
</div>

<br><br>

<h2 class="h2">Seeker Skills</h2>

<div>
  <p><%= user.seeker.skills.split(',') %></p>
</div>

<h2 class="h2">Job: <%= job.title %></h2>

<table class="table table-hover table-primary rounded overflow-hidden" class="border border-primary">
  <caption>List of Job Skills</caption>
 <tbody>
  <% heatmap.forEach((h) => { %>
  <tr>
    <td>
      <%= h.jobSkill %>
    </td>
    <td>
        <div class="progress">
          <div
            class="progress-bar"
            role="progressbar"
            style="width: <%= h.closeness %>%"
            aria-valuenow="<%= h.closeness %>"
            aria-valuemin="0"
            aria-valuemax="100"
          ></div>
        </div>
    </td>
  </tr>
<% }) %>
</tbody>
</table>


<%- include('../partials/footer') %>
