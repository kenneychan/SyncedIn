<%- include('../partials/header') %>

<h2>Users List</h2>
<table>
  <thead>
    <tr>
      <th data-sort="string">Name</th>
      <th>GoogleId</th>
      <th>eMail</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach (function (u) { %>
    <tr>
      <td class="review-user">
        <img
          alt="avatar"
          src="<%= u.avatar %>"
          referrerpolicy="no-referrer"
        /><%= u.name %>
      </td>
      <td><%= u.googleId %></td>
      <td><%= u.email %></td>
      <td><a href="/users/<%= u._id %>">Profile</a></td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>